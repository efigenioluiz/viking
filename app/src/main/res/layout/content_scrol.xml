<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_scrol"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ScrolActivity"
        android:fillViewport="true"
        android:background="#000">



    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:text="Ragnar Lodbrok"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="80dp"
                android:textSize="15dp"
                android:layout_gravity="center"
                android:textColor="#fff"
                android:layout_marginLeft="80dp"/>
        <ImageButton
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:id="@+id/btRagnar"
                android:background="@drawable/ragnar"
                android:layout_gravity="top"
                android:layout_marginLeft="60dp"
        />
        <TextView
                android:text="Lagertha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="80dp"
                android:textSize="15dp"
                android:layout_gravity="center"
                android:textColor="#fff"
                android:layout_marginLeft="90dp"/>
        <ImageButton
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:id="@+id/btLagertha"
                android:background="@drawable/lagertha"
                android:layout_gravity="top"
                android:layout_marginLeft="60dp"
        />
        <TextView
                android:text="Rollo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="90dp"
                android:textSize="15dp"
                android:layout_gravity="center"
                android:textColor="#fff"
                android:layout_marginLeft="80dp"/>
        <ImageButton
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:id="@+id/btRollo"
                android:background="@drawable/rollo"
                android:layout_gravity="top"
                android:layout_marginLeft="60dp"
        />
        <TextView
                android:text="Floki"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="90dp"
                android:textSize="15dp"
                android:layout_gravity="center"
                android:textColor="#fff"
                android:layout_marginLeft="80dp"/>
        <ImageButton
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:id="@+id/btFloki"
                android:background="@drawable/floki"
                android:layout_gravity="top"
                android:layout_marginLeft="60dp"
        />
        <TextView
                android:text="Athelstan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="80dp"
                android:textSize="15dp"
                android:layout_gravity="center"
                android:textColor="#fff"
                android:layout_marginLeft="90dp"/>
        <ImageButton
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:id="@+id/btAtl"
                android:background="@drawable/athelstan"
                android:layout_gravity="top"
                android:layout_marginLeft="60dp"
        />
        <TextView
                android:text="Bjorn Ironside"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="80dp"
                android:textSize="15dp"
                android:layout_gravity="center"
                android:textColor="#fff"
                android:layout_marginLeft="80dp"/>
        <ImageButton
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:id="@+id/btBjorn"
                android:background="@drawable/bjorn"
                android:layout_gravity="top"
                android:layout_marginLeft="60dp"
                android:layout_marginBottom="30dp"
        />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_athelstan"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AthelstanActivity"
        android:fillViewport="true"
        android:background="#000">


    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:text="Athelstan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteY="104dp"
                app:layout_constraintStart_toEndOf="@+id/imageView"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:textSize="40dp"
                android:layout_gravity="center"
                android:textColor="#fff"
        />
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/athelstan"
                tools:layout_editor_absoluteY="16dp"
                tools:layout_editor_absoluteX="33dp"
                android:id="@+id/imageView"
                android:layout_gravity="center"
        />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteY="104dp"
                app:layout_constraintStart_toEndOf="@+id/imageView"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:textSize="20dp"
                android:textColor="#fff"
                android:text="Athelstan era um jovem anglo-saxão, foi tomado como escravo por Ragnar Lothbrok  e seus colegas Vikings do mosteiro de Lindisfarne. Athelstan foi trazido para viver na sociedade viking e luta para manter suas crenças em um ambiente muito diferente de sua casa através do mar. Regrado entre manter suas crenças e sobreviver em seu mundo novo e cruel, Athelstan começou a duvidar de sua fé no deus cristão."/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/imageView"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:textSize="40dp"
                android:layout_gravity="center"
                android:textColor="#fff"
                android:text="Amigos Favoritos"
                tools:layout_editor_absoluteY="16dp"
                tools:layout_editor_absoluteX="33dp"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <ImageButton
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    app:srcCompat="@drawable/ragnar"
                    android:id="@+id/btAtheslanR"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
            />
            <ImageButton
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    app:srcCompat="@drawable/bjorn"
                    android:id="@+id/btAtheslanB"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
            />
        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
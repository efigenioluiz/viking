<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_bjorn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".BjornActivity"
        android:fillViewport="true"
        android:background="#000">


    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:text="Bjorn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteY="104dp"
                app:layout_constraintStart_toEndOf="@+id/imageView"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:textSize="40dp"
                android:layout_gravity="center"
                android:textColor="#fff"
        />
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/bjorn"
                tools:layout_editor_absoluteY="16dp"
                tools:layout_editor_absoluteX="33dp"
                android:id="@+id/imageView"
                android:layout_gravity="center"
        />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteY="104dp"
                app:layout_constraintStart_toEndOf="@+id/imageView"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:textSize="20dp"
                android:textColor="#fff"
                android:text="Björn Ironside é o rei de Kattegat, o filho mais velho de Ragnar Lothbrok e Lagertha . Embora mais tarde seja revelado que seu tio Rollo pode ser seu pai biológico, Björn acredita que ele é filho de Ragnar. Ele é o marido de Gunnhild , foi o terceiro marido de Torvi  e pai de quatro filhos vivos de Torvi Erik, Reil, Hali e Asa. Bjorn é o herdeiro de Ragnar para  Kattegat. "/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/imageView"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:textSize="40dp"
                android:layout_gravity="center"
                android:textColor="#fff"
                android:text="Amigos Favoritos"
                tools:layout_editor_absoluteY="16dp"
                tools:layout_editor_absoluteX="33dp"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <ImageButton
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    app:srcCompat="@drawable/ragnar"
                    android:id="@+id/btBjornR"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
            />
            <ImageButton
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    app:srcCompat="@drawable/lagertha"
                    android:id="@+id/btBjornL"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
            />
            <ImageButton
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    app:srcCompat="@drawable/athelstan"
                    android:id="@+id/btBjornA"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
            />
            <ImageButton
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    app:srcCompat="@drawable/floki"
                    android:id="@+id/btBjornF"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
            />
        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
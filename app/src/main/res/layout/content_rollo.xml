<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_rollo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RolloActivity"
        android:fillViewport="true"
        android:background="#000">


    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:text="Rollo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteY="104dp"
                app:layout_constraintStart_toEndOf="@+id/imageView"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:textSize="40dp"
                android:layout_gravity="center"
                android:textColor="#fff"
        />
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/rollo"
                tools:layout_editor_absoluteY="16dp"
                tools:layout_editor_absoluteX="33dp"
                android:id="@+id/imageView"
                android:layout_gravity="center"
        />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteY="104dp"
                app:layout_constraintStart_toEndOf="@+id/imageView"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:textSize="20dp"
                android:textColor="#fff"
                android:text='O Duque da Normandia era o título dado ao governante do Ducado da Normandia, no noroeste da França, que tem suas origens no Condado de Ruão, um feudo criado em 911 pelo rei Carlos III de França para Rollo, um nobre norueguês e líder escandinavo.  Em 1066, o duque em exercício, Guilherme, o Bastardo, conquistou a Inglaterra e se coroou Guilherme I, "o Conquistador". Desde então o rei inglês se tornou o detentor do título de Duque da Normandia, até que os franceses retomaram a região do Rei John em 1204. O filho deste, Henrique III, renunciou ao título pelo Tratado de Paris (1259).'/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/imageView"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:textSize="40dp"
                android:layout_gravity="center"
                android:textColor="#fff"
                android:text="Amigos Favoritos"
                tools:layout_editor_absoluteY="16dp"
                tools:layout_editor_absoluteX="33dp"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <ImageButton
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    app:srcCompat="@drawable/bjorn"
                    android:id="@+id/btRolloB"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:background="#000"/>
        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>